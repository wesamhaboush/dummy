<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<jaxb:bindings xmlns:jaxb="http://java.sun.com/xml/ns/jaxb" xmlns:xs="http://www.w3.org/2001/XMLSchema"
               xmlns:xjc="http://java.sun.com/xml/ns/jaxb/xjc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://java.sun.com/xml/ns/jaxb http://java.sun.com/xml/ns/jaxb/bindingschema_2_0.xsd"
               version="2.1">
    <jaxb:globalBindings>
        <jaxb:javaType name="org.joda.time.DateTime" xmlType="xs:dateTime"
                    parseMethod="com.codebreeze.incubator.xml.XmlBestPracticse.parseDateTime"
                    printMethod="com.codebreeze.incubator.xml.XmlBestPracticse.printDateTime" />
         <jaxb:javaType name="org.joda.time.LocalDate" xmlType="xs:date"
                        parseMethod="com.codebreeze.incubator.xml.XmlBestPracticse.parseLocalDate"
                        printMethod="com.codebreeze.incubator.xml.XmlBestPracticse.printLocalDate" />
        <jaxb:javaType name="org.joda.time.LocalTime" xmlType="xs:time"
                       parseMethod="com.codebreeze.incubator.xml.XmlBestPracticse.parseLocalTime"
                       printMethod="com.codebreeze.incubator.xml.XmlBestPracticse.printLocalTime" />

        <!-- Force all classes implements Serializable -->
        <xjc:serializable uid="1" />
        <xjc:simple />
    </jaxb:globalBindings>
</jaxb:bindings>